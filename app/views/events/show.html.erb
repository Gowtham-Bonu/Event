<div class="event-show" >
  <h1><%= @event.name %></h1>
  <table class="table table-dark table-striped" >
      <tr>
          <th>Comment</th>
          <th>Action</th>
      </tr>
      <% @event.comments.each do |comment| %>
      <% if @likes.where(user_id: @user.id, comment_id: comment.id).exists? %>
        <tr><td><%= comment.comment_name %></td><td><a href="" >liked</a></td></tr>
      <% else %>
        <tr><td><%= comment.comment_name %></td><td><a href="/comments/like/<%= comment.id %>/<%= @event.id %>" >like</a></td></tr>
      <% end %>
      <% end %>
  </table>
</div>